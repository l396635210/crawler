{% extends 'admin.html.twig' %}
{% block title %}招标-信息接收对象{% endblock %}
{% block body %}
    <h2 class="sub-header">信息接收对象</h2>
    <a role="button" href="{{ path('emp_create') }}" class="btn btn-primary">添加新人</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>姓名</th>
                <th>邮箱</th>
                <th>企业</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {% for item in list %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.empName }}</td>
                <td>{{ item.empMail }}</td>
                <td>{{ item.enterprise }}</td>
                <td>
                    <a href="{{ path('emp_edit', {'id':item.id}) }}" class="btn btn-info">修改</a>
                    <button class="btn btn-danger">删除</button>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a role="button" href="{{ path('emp_create') }}" class="btn btn-primary">添加新人</a>
{% endblock %}

{% block javascripts %}
<script></script>
{% endblock %}
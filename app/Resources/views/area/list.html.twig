{% extends 'admin.html.twig' %}
{% block title %}招标-地区管理{% endblock %}

{% block body %}
    <h2 class="sub-header">地区管理</h2>
    <p><a role="button" href="{{ path('area_create') }}" class="btn btn-primary">创建一个新的地区</a></p>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>地区名称</th>
                <th class="text-right">操作</th>
            </tr>
            </thead>
            <tbody>
            {% for item in list %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.areaName }}</td>
                <td class="text-right">
                    <a href="{{ path('area_edit', { 'id':item.id }) }}" class="btn btn-info">修改</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a role="button" href="{{ path('area_create') }}" class="btn btn-lg btn-primary">创建一个新的地区</a>
{% endblock %}

{% block javascripts %}
<script></script>
{% endblock %}
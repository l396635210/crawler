{% extends 'base.html.twig' %}

{% block body %}
    <h1>Channel</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ channel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ channel.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ channel.url }}</td>
            </tr>
            <tr>
                <th>Aid</th>
                <td>{{ channel.aId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if entity.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ channel.data }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_zh_channel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_zh_channel_edit', { 'id': channel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

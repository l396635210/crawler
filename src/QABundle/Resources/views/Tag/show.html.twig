{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Tag</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if entity.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ tag.data }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('qa_tag_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('qa_tag_edit', { 'id': tag.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('qa_tag_new') }}">继续添加</a>
        </li>
        <hr>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

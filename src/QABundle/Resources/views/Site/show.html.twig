{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Site</h1>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ site.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ site.name }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{% if entity.status %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Host</th>
                    <td>{{ site.host }}</td>
                </tr>
                <tr>
                    <th>Data</th>
                    <td>{{ site.data }}</td>
                </tr>
            </tbody>
        </table>
        </div>
    </div>
    <div class="row">
        <ul class="col-md-offset-3 col-md-6 list-inline">
            <li class="col-md-4 text-center">
                <a href="{{ path('qa_site_index') }}">Back to the list</a>
            </li>
            <li class="col-md-4 text-center">
                <a href="{{ path('qa_site_edit', { 'id': site.id }) }}">Edit</a>
            </li>
            <li class="col-md-4 text-center">
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}

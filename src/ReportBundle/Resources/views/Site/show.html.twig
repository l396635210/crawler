{% extends 'base.html.twig' %}

{% block body %}
    <h1>Site</h1>

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ site.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ site.url }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled list-inline btn-group">
        <li>
            <a class="btn btn-link" href="{{ path('admin_report_site_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-info" href="{{ path('admin_report_site_edit', { 'id': site.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

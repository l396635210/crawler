{% extends 'base.html.twig' %}

{% block body %}
    <h1>Channel</h1>

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ channel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ channel.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ channel.category }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ channel.url }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline list-unstyled btn-group">
        <li>
            <a class="btn btn-warning" href="{{ path('report_set_grab_rule', { 'id': channel.id }) }}">Set</a>
        </li>
        <li>
            <a class="btn btn-link" href="{{ path('admin_report_channel_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-info" href="{{ path('admin_report_channel_edit', { 'id': channel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

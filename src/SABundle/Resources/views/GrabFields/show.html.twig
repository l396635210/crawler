{% extends 'admin.html.twig' %}

{% block body %}
    <h1>GrabFields</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grabField.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ grabField.name }}</td>
            </tr>
            <tr>
                <th>Tagtype</th>
                <td>{{ grabField.tagType }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if entity.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ grabField.data }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sa-grab_fields_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('grabfields_edit', { 'id': grabField.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
